{
  "manifest_version": 2,
  "name": "Søk i Nasjonalbiblioteket",
  "description": "Høgreklikks-utvidelse for søk i Nasjonalbiblioteket.",
  "background": {
    "scripts": ["background.js"]
  },
  "version": "1.0",
  "applications": {
      "gecko": {
        "id": "sok-i-nasjonalbiblioteket@outlook.com",
        "strict_min_version": "54.0"
    }
  },
  "icons": { 
    "128":"images/nblogo_t_128.png", 
    "48":"images/nblogo_t_48.png", 
    "24":"images/nblogo_t_24.png", 
    "20":"images/nblogo_t_20.png", 
    "16":"images/nblogo_t_16.png"
  },   
  "browser_action": {
    "default_icon": "images/nblogo_t_48.png"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}